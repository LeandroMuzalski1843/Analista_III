<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juan.ejemplomvc.controller.NuevoProyectoController">
    <children>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Crear Nuevo Proyecto" />
        <GridPane hgap="10.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nombre del Proyecto:" />
                <TextField fx:id="nombreProyectoField" GridPane.columnIndex="1" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
        <CheckBox fx:id="agregarTareasCheckbox" mnemonicParsing="false" text="Agregar tareas al proyecto" />
        <VBox fx:id="tareasContainer" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Tareas" />
            <HBox spacing="10.0">
                <TextField fx:id="tareaField" HBox.hgrow="ALWAYS" promptText="Descripción de la tarea" />
                <Button mnemonicParsing="false" onAction="#handleAgregarTarea" text="Agregar Tarea" />
            </HBox>
            <TableView fx:id="tareasTable" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="tareaDescripcionColumn" prefWidth="400.0" text="Descripción" />
                </columns>
            </TableView>
        </VBox>
        <HBox alignment="CENTER" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#handleGuardar" text="Guardar Proyecto" />
            <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
        </HBox>
    </children>
</VBox>